
import java.lang.Object;
import java.util.Scanner;
/**
 * Write a description of class Palindrome2 here.
 * 
 * @author (your name) 
 * @version (a version number or a date)
 */
public class Palindrome2
{

    /**
     * Constructor for objects of class Palindrome2
     */
    public Palindrome2()
    {
        
            String original = "";
            String reverse = "";
            Scanner in = new Scanner(System.in);
            
            System.out.println("Enter a string to check if it is a palindrome");
            
            original = in.nextLine();
            int length = original.length();
            int fromStart = 0;
            int fromEnd = length-1;
            boolean palindrome = false;
            
            while (fromStart<fromEnd && fromStart!=fromEnd)
            {
                if(original.charAt(fromStart) != original.charAt(fromEnd))
                {
                    palindrome = false;
                } else {
                    palindrome = true;
                }
              fromStart++;
              fromEnd--;
            }
            System.out.println("Is this a palindrome?:" + palindrome);
   }
}
